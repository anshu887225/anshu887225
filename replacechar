namespace replace_char
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string str = "a,b,c,d";
            string strReplace = str.Replace(",", ":");
            Console.WriteLine(strReplace);
            string strReplace1 = str.Replace("b", "e");
            Console.WriteLine(strReplace1);
            Console.ReadLine();
        }
    }
}

// second code
 static void Main(string[] args)
        {
            char replaceCharacter = '*';
            char searchCharacter = 'a';
            string input = "mukeshkumarpasi";
            char[] arr = input.ToCharArray();
            for (int i = 0; i < arr.Length; i++)
            {
                if (arr[i] == searchCharacter)
                    arr[i] = replaceCharacter;
            }
            input = new string(arr);//char array is converting to string
            Console.WriteLine(input);
            Console.ReadLine();
        }
    }
}

